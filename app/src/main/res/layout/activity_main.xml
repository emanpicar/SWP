<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintGuide_percent="1"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bluetooth_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="@string/bluetooth_radar"
        app:layout_constraintBottom_toTopOf="@+id/blutooth_radar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/fence_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/fence_radar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <WebView
        android:id="@+id/blutooth_radar"
        android:layout_width="452dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bluetooth_btn"
        app:layout_constraintStart_toEndOf="@+id/bluetooth_btn"
        app:layout_constraintTop_toBottomOf="@+id/bluetooth_btn" >

        <TextView
            android:id="@+id/nearDevice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="251dp"
            android:layout_y="256dp"
            android:text="♦ nearDevice1"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/nearDevice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="181dp"
            android:layout_y="186dp"
            android:text="♦ nearDevice3"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/nearDevice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="170dp"
            android:layout_y="295dp"
            android:text="♦ nearDevice2"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/farDevice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="321dp"
            android:layout_y="196dp"
            android:text="♦ farDevice1"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/farDevice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="101dp"
            android:layout_y="226dp"
            android:text="♦ farDevice2"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/farDevice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="181dp"
            android:layout_y="390dp"
            android:text="♦ farDevice3"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/scanBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCAN"
            android:visibility="visible"
            tools:visibility="visible" />

    </WebView>

</androidx.constraintlayout.widget.ConstraintLayout>